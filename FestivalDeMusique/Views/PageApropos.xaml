      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FestivalDeMusique.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageApropos">

    <Border>
        <Border.Background>
            <ImageBrush Stretch="Fill" ImageSource="/bg/2.jpg"/>
        </Border.Background>
        <StackPanel Background="Transparent">
        <TextBlock Text="A propos de l'application" Margin="0 20 0 0" 
                   FontSize="40" Foreground="AliceBlue"
                   HorizontalAlignment="Center"/>
        <TextBlock Margin="40 20 0 0"
                   TextWrapping="Wrap" Foreground="AliceBlue"
                   FontSize="20"
                   Text="Festi'Normandie"/>
        <TextBlock Margin="50 5 0 0"
                   TextWrapping="Wrap"
                   FontSize="20" Foreground="AliceBlue"
                   Text="Mai 2021"/>
        <TextBlock Margin="50 5 0 0"
                   TextWrapping="Wrap"
                   Foreground="AliceBlue"
                   FontSize="20"
                   Text="Equipe : Gaston, Hamza, Ibrahima, Gaetan, Morgan"/>        
    </StackPanel>
    </Border>
</Page>
