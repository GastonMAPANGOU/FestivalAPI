<Window x:Class="FestivalDeMusique.View.AuthentificationGIMI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FestivalDeMusique.View"
        mc:Ignorable="d"
        Title="AuthentificationGIMI" Height="326" Width="401">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="66,39,0,0" Name="LoginHeading" Text="Connexion du gestionnaire GIMI:" VerticalAlignment="Top" FontSize="17" FontStretch="ExtraCondensed" Width="408"/>
