        <TextBlock Height="23" HorizontalAlignment="Left" Margin="36,167,0,0" Name="textBlock2" Text="Mot de passe" VerticalAlignment="Top" Width="77" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="118,115,0,0" Name="textBoxEmail" VerticalAlignment="Top" Width="247" />
        <Button Content="Connexion" Click="LoginFunction" Height="23" HorizontalAlignment="Left" Margin="118,211,0,0" Name="button1" VerticalAlignment="Top" Width="104" />
        <TextBlock Height="23" HorizontalAlignment="Left" x:Name ="errormessage" VerticalAlignment="Top" Width="247" Margin="118,253,0,0"  OpacityMask="Crimson" Foreground="#FFE5572C"  />
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="118,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="247"/>
    </Grid>
</Window>
