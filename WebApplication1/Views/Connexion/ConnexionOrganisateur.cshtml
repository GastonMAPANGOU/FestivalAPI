@model FestivalAPI.Models.Organisateur
@{

    ViewData["Title"] = "Organisateur? Connectez-vous!!!";
}



<h1>Organisateur? Connectez-vous!!!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConnexionOrganisateur">
            <span style="color:red">@Html.ValidationMessage("error")</span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Login" class="control-label">Login</label>
                <input asp-for="Login" class="form-control" type="email" required />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pwd" class="control-label">Mot de passe</label>
                <input asp-for="Pwd" class="form-control" type="password" required />
                <span asp-validation-for="Pwd" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-controller="Home">Accueil</a>
</div>

<div>
    <a asp-action="ConnexionFestivalier">Se connecter en tant que festivalier</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
