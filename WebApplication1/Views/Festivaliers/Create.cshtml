@model FestivalAPI.Models.Festivalier

@{ 

    /* string @Nom = "";
    string @Prenom = "";
    string @Login = "";
    string @Pwd = "";
    int @Nb_Participants = 0;*/
    int id_jour=0;
    int nbr_Jour = 0;
    int festivalId = 1;
    
    double somme = 500;

    IEnumerable<FestivalAPI.Models.Jour> jours = WebApplication1.ControllersAPI.API.Instance.GetJoursAsync().Result.Where(s => s.FestivalId==1);
}



<h1>Ajouter Festivalier</h1>



<h4>Festivalier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@somme" />
            <input type="hidden" asp-for="@festivalId" />
            <div class="form-group">
                <label asp-for="Nom" class="control-label">Nom</label>
                <input asp-for="Nom" class="form-control" required />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label">Prénom</label>
                <input asp-for="Prenom" class="form-control" required />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">Login</label>
                <input asp-for="Login" class="form-control" required />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pwd" class="control-label">Mot de passe</label>
                <input asp-for="Pwd" class="form-control" type="password" required />
                <span asp-validation-for="Pwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nb_ParticipantsPT" class="control-label">Nombre de places plein tarif(adultes):</label>
                <input asp-for="Nb_ParticipantsPT" class="form-control" type="number" required />
                <span asp-validation-for="Nb_ParticipantsPT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nb_ParticipantsDT" class="control-label">Nombre de places demi tarif(enfants):</label>
                <input asp-for="Nb_ParticipantsDT" class="form-control" type="number" required />
                <span asp-validation-for="Nb_ParticipantsDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@nbr_Jour" class="control-label">Nombre de jours:</label>
                <input asp-for="@nbr_Jour" class="form-control" type="number" required />
                <span asp-validation-for="@nbr_Jour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@id_jour" class="control-label">Sélectionnez une date</label>
                <select class="form-control" asp-for="@id_jour">
                    <option value="">Choisissez une option</option>
                    @foreach (var it in jours)
                    {
                        <option value="@it.IdJ">
                            @it.Date_jour
                        </option>
                    }
                </select>
                <span asp-validation-for="@id_jour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
