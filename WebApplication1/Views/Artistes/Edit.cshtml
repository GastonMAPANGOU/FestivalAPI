<script type="text/javascript">

    function avatar() {
        var image = document.querySelector("image");

        xhr = new XMLHttpRequest();
        xhr.open("POST", "Create.cshtml");
        xhr.onload = function () {
            alert(xhr.responseText);
        }

        var form = new FormData();
        form.append("image", image.files[0]);

        xhr.send(form);

        return false;
    }
</script>

