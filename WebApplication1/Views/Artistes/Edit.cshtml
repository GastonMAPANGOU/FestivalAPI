                        <option value="@it.Id">
                            @it.Nom
                        </option>
                    }
                </select>
                <span asp-validation-for="StyleId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descriptif" class="control-label">Descriptif :</label>
                <input asp-for="Descriptif" class="form-control" type="text" required />
