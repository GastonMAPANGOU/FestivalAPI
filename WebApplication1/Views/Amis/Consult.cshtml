@using FestivalAPI.Models
@using WebApplication1.Models
@using WebApplication1.ControllersAPI


@foreach (var item in ViewBag.Artistes)
{
    <div class="card" style="width: 18rem;">
        <img src=@item.Photo class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.Nom @item.Prenom</h5>
            <p class="card-text">@item.Descriptif</p>
        </div>
        <ul class="list-group list-group-flush">

            @{
                Pays pays = (Pays)API.Instance.GetPaysAsync(item.PaysId).Result;
                Style style = (Style)API.Instance.GetStyleAsync(item.StyleId).Result;
            }
            <li class="list-group-item">@pays.Nom</li>
            <li class="list-group-item">@style.Nom</li>
            <li class="list-group-item">@item.Extrait</li>
        </ul>
        @*<div class="card-body">
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
            </div>*@
    </div>
}